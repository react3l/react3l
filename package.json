{
  "name": "@react3l/react3l",
  "version": "6.0.0",
  "description": "React3L packages",
  "author": "react3l",
  "license": "MIT",
  "repository": "react3l/react3l",
  "main": "dist/index.js",
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "lib:advanced-filters": "yarn --cwd dist/advanced-filters",
    "lib:axios-observable": "yarn --cwd dist/axios-observable",
    "lib:common": "yarn --cwd dist/common",
    "lib:decorators": "yarn --cwd dist/decorators",
    "lib:localization": "yarn --cwd dist/localization",
    "readme": "./scripts/readme.sh",
    "sync:version": "node scripts/sync-version.js",
    "rm:dist": "rm -rf dist/",
    "tsc": "tsc",
    "build": "run-s sync:version tsc",
    "start": "tsc -w",
    "example": "yarn --cwd example",
    "example:start": "yarn --cwd example start",
    "prepare": "run-s rm:dist build readme",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "files": [
    "dist",
    "README.md",
    "!advanced-filters",
    "!axios-observable",
    "!common",
    "!decorators",
    "!localization"
  ],
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@react3l/i18next-extractor": "^0.4.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "antd": "^4.13.1",
    "axios": "^0.21.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-macros": "^3.0.1",
    "bootstrap": "^4.6.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "i18next": "^19.9.2",
    "jest": "^26",
    "lodash": "^4.17.21",
    "microbundle-crl": "^0.13.10",
    "moment": "^2.29.1",
    "node-sass": "^4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.8.10",
    "react-scripts": "^3.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.6",
    "ts-jest": "^26.5.3",
    "ts-nameof.macro": "^4.2.2",
    "typescript": "^3.7.5"
  }
}
