{
  "name": "@react3l/react3l",
  "version": "5.0.0-alpha.1",
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "module": "es/index.es.js",
  "scripts": {
    "start-storybook": "start-storybook -p 9009",
    "build-storybook": "build-storybook -o build/",
    "test": "jest",
    "watch": "cross-env NODE_ENV=development rollup -c -w",
    "rm-old-build": "rm -rf dist/",
    "cp-files": "cp package.json tsconfig.json README.md dist/",
    "prebuild": "run-s rm-old-build",
    "build": "cross-env NODE_ENV=production rollup -c",
    "postbuild": "run-s cp-files",
    "typedoc": "typedoc --out docs/ --exclude 'src/**/*.test.tsx?' src/",
    "extract": "i18next-extractor -i src/ -o src/i18n/ -p src/i18n/ extract",
    "merge": "i18next-extractor -i src/ -o src/i18n/ -p src/i18n/ merge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint --fix src/**/*.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": "react-app",
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-debugger": "error",
      "no-console": "error",
      "no-useless-return": "error",
      "no-useless-constructor": "error",
      "no-useless-call": "error",
      "no-useless-computed-key": "error",
      "no-useless-concat": "error",
      "no-use-before-define": "error",
      "no-useless-rename": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "@react3l/axios-observable": "*",
    "axios": "*",
    "i18next": "*",
    "lodash": "*",
    "moment": "*",
    "path": "*",
    "react": "*",
    "react-i18next": "*",
    "reactn": "*",
    "reflect-metadata": "*",
    "rxjs": "*",
    "yup": "*"
  },
  "devDependencies": {
    "@react3l/advanced-filters": "^1.1.0",
    "@react3l/axios-observable": "^1.1.4",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/cli": "^6.0.21",
    "@storybook/preset-create-react-app": "^3.1.2",
    "@storybook/react": "^6.0.21",
    "@svgr/rollup": "^5.4.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/yup": "^0.29.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "antd": "^4.5.4",
    "axios": "^0.19.2",
    "babel-jest": "^26.6.2",
    "bootstrap": "^4.5.2",
    "commander": "^5.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^7.8.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "i18next": "^19.6.3",
    "jest": "^26.6.2",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "node-directory-indexing": "^0.0.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.7.0",
    "reactn": "^2.2.7",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.33.1",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-typescript2": "^0.29.0",
    "rxjs": "^6.6.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.4.3",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.5",
    "yup": "^0.29.3"
  }
}
